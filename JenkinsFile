pipeline {
    agent {
        label 'windows'
    }
    
   
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from Git repository
                git 'https://github.com/ShivaniHardade/Jenkins.git'
            }
        }
        
        stage('Build') {
            steps {
                // Build the Maven project
                bat 'mvn clean package'
            }
        }
        
        stage('Deploy') {
            steps {
                // Example: Deploy the built artifact (assuming it's a JAR file) to a deployment directory
                bat 'xcopy /Y /I /E target\\*.jar "C:\\path\\to\\deployment\\directory\\"'
            }
        }
    }
    
    // Post-build actions
    post {
        success {
            echo 'Build and Deployment successful!'
        }
        failure {
            echo 'Build or Deployment failed!'
        }
    }
}
