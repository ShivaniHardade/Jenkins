pipeline {
    agent {
        label 'windows'
    }
    
   
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from Git repository
                git 'https://github.com/ShivaniHardade/Jenkins.git'
            }
        }
        
        stage('Build') {
            steps {
                // Build the Maven project
                bat 'mvn clean package'
            }
        }
        
       
    }
    
    // Post-build actions
    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build or Deployment failed!'
        }
    }
}
