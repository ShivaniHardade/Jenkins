pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/iluwatar/java-design-patterns.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Deploy') {
            steps {
                // Example deployment step
                // Adjust this section based on your deployment requirements
                // sh 'scp target/your-artifact.jar user@server:/path/to/deploy'
                echo 'Deployment step (to be customized based on your environment)'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
