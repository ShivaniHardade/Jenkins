pipeline {
    agent any

tools {
        // Define JDK tool named 'jdk8' (you can use any name)
        jdk 'OpenJDK-21'

        // Define Maven tool named 'M3' (you can use any name)
        maven 'M3'
    }

    stages {
        stage('Checkout Jenkinsfile Repo') {
            steps {
                git url: 'https://github.com/ShivaniHardade/Jenkins.git', branch: 'main'
            }
        }
        stage('Checkout Java Project') {
            steps {
                git url: 'https://github.com/dropwizard/dropwizard.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Package') {
            steps {
                bat 'mvn package'
            }
        }
        stage('Deploy') {
            steps {
                // Example deployment step
                echo 'Deployment step (to be customized based on your environment)'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
