pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from Git repository
                git 'https://github.com/ShivaniHardade/Jenkins.git'
            }
        }
        
        stage('Build') {
            steps {
                // Build each submodule
                dir('simple-sso-client') {
                    bat 'mvn clean package'
                }
                dir('simple-sso-server') {
                    bat 'mvn clean package'
                }
                dir('simple-sso-subsysa') {
                    bat 'mvn clean package'
                }
                dir('simple-sso-subsysb') {
                    bat 'mvn clean package'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                // Example: Copy built artifacts to deployment directories
                bat 'xcopy /Y /I /E simple-sso-client\\target\\*.jar "C:\\deployments\\client\\"'
                bat 'xcopy /Y /I /E simple-sso-server\\target\\*.jar "C:\\deployments\\server\\"'
                bat 'xcopy /Y /I /E simple-sso-subsysa\\target\\*.jar "C:\\deployments\\subsysa\\"'
                bat 'xcopy /Y /I /E simple-sso-subsysb\\target\\*.jar "C:\\deployments\\subsysb\\"'
            }
        }
    }
    
    // Post-build actions
    post {
        success {
            echo 'Build and Deployment successful!'
        }
        failure {
            echo 'Build or Deployment failed!'
        }
    }
}
