pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from Git repository
                git 'https://github.com/ShivaniHardade/Jenkins.git'
            }
        }
        
        stage('Build') {
            steps {
                // Use Maven to build the Java project
                bat 'mvn clean package'
            }
        }
        
        stage('Deploy') {
            steps {
                // Example: Copy the built artifact (e.g., JAR file) to a deployment server
                bat 'scp target/your-project.jar username@server:/path/to/deployment/directory'
            }
        }
        
        // Add more stages for testing, notifications, etc.
    }
    
    // Post-build actions
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
