pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from Git repository
                git 'https://github.com/ShivaniHardade/Jenkins.git'
            }
        }
        
        stage('Build') {
            steps {
                // Use Maven to build the Java project
                bat 'mvn clean package'
            }
        }
        
        stage('Deploy') {
            steps {
                // Example: Copy the built artifact (e.g., JAR file) to a deployment directory
                bat 'xcopy /Y /I target\\*.jar C:\\path\\to\\deployment\\directory\\'
            }
        }
    }
    
    // Post-build actions
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
